{
	"name": "Hangouts PIP",
	"version": "1.0",
	"description": "Adds picture in picture support to hangouts calls",
	"permissions": ["activeTab"],
	 "content_scripts": [
        {
            "matches": [
                "*://hangouts.google.com/call*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
	],
	"manifest_version": 2
}